<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.partyum.partyummanager.reservation.ReservationViewModel" />

        <variable
                name="viewModel"
                type="ReservationViewModel" />

        <variable
                name="position"
                type="int" />
    </data>

    <LinearLayout
            android:padding="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            android:onClick="@{()->viewModel.selectDocument(position)}">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.selectedReservation.docs[position].name}"
                android:textSize="30sp"
                android:textColor="@color/black" />

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="end">

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/created_date_time"
                        android:layout_marginEnd="5dp" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{viewModel.selectedReservation.docs[position].createdDateTime}" />

            </LinearLayout>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/modified_date_time"
                        android:layout_marginEnd="5dp" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{viewModel.selectedReservation.docs[position].modifiedDateTime}" />

            </LinearLayout>

        </LinearLayout>

        <View
                android:layout_marginTop="14dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/light_gray" />

    </LinearLayout>

</layout>