<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.partyum.partyummanager.reservation.ReservationViewModel" />

        <variable
                name="viewModel"
                type="ReservationViewModel" />

        <variable
                name="position"
                type="int" />
    </data>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="?attr/selectableItemBackground"
                android:onClick="@{()->viewModel.selectReservation(position)}"
                android:gravity="center"
                >

            <TextView
                    style="@style/reservation_item_pos"
                    android:text="@string/groom" />

            <TextView
                    style="@style/reservation_item_name"
                    android:id="@+id/tv_reservation_item_groom_name"
                    android:text="@{viewModel.reservations[position].groomName}"
                    />

            <View
                    android:layout_width="15dp"
                    android:layout_height="0dp" />

            <TextView
                    style="@style/reservation_item_pos"
                    android:text="@string/bride" />

            <TextView
                    style="@style/reservation_item_name"
                    android:id="@+id/tv_reservation_item_bride_name"
                    android:text="@{viewModel.reservations[position].brideName}"/>


        </LinearLayout>


</layout>