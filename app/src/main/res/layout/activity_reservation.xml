<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="com.partyum.partyummanager.reservation.ReservationViewModel" />

        <variable
                name="viewModel"
                type="ReservationViewModel" />
    </data>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                >

            <LinearLayout
                    android:padding="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        >

                    <TextView
                            style="@style/reservation_item_pos"
                            android:text="@string/groom" />

                    <TextView
                            style="@style/reservation_item_name"
                            android:text="@{viewModel.reservation.groomName}" />

                    <View
                            android:layout_width="30dp"
                            android:layout_height="0dp" />

                    <TextView
                            style="@style/reservation_item_pos"
                            android:text="@string/bride" />

                    <TextView
                            style="@style/reservation_item_name"
                            android:text="@{viewModel.reservation.brideName}" />

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:gravity="end|center_vertical"
                        android:layout_height="wrap_content"
                        >

                    <Button
                            style="@style/reservation_mid_buttons"
                            android:text="@string/print_all" />

                    <Button
                            style="@style/reservation_mid_buttons"
                            android:text="@string/add_docu" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp">

            <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    >

                <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_docs"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

            </androidx.core.widget.NestedScrollView>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</layout>