<resources xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- Base application theme. -->
    <style name="Theme.PartyumManager" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#F4F5F0</item>
        <item name="colorPrimaryVariant">#000000</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#CD212A</item>
        <item name="colorSecondaryVariant">#53565A</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSecondary</item>
        <!-- Customize your theme here. -->

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="main_button_theme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/main_button_size</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="main_button_divider">
        <item name="android:layout_width">130dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:src">@drawable/iv_button_divider</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="reservation_item_name">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="reservation_item_pos">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="reservation_item_datetime">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/stub_datetime</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="reservation_mid_buttons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="csc_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="grid_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/border</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
<!--        <item name="android:gravity">center</item>-->
        <item name="android:layout_gravity">fill</item>
<!--        <item name="android:background">#ffeeeeee</item>-->
<!--        <item name="android:horizontalSpacing">0.5dp</item>-->
<!--        <item name="android:verticalSpacing">0.5dp</item>-->
    </style>

</resources>